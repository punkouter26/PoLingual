{
    "files.exclude": {
        "**/bin": true,
        "**/obj": true,
        "**/.vs": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/bin": true,
        "**/obj": true,
        "**/logs": true
    },
    "dotnet.defaultSolution": "PoLingual.slnx",
    "csharp.debug.console": "integratedTerminal",
    "files.associations": {
        "*.bicep": "bicep"
    },
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    }
}